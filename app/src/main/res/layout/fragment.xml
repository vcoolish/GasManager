<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/indata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressbar"
        android:fontFamily="@font/montextra"
        android:textAlignment="center"
        android:textColor="#454B55"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/months"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <View
            android:id="@+id/bar1"
            style="@style/bar" />

        <View
            android:id="@+id/bar2"
            style="@style/bar" />

        <View
            android:id="@+id/bar3"
            style="@style/bar" />

        <View
            android:id="@+id/bar4"
            style="@style/bar" />

        <View
            android:id="@+id/bar5"
            style="@style/bar" />

        <View
            android:id="@+id/bar6"
            style="@style/bar" />

        <View
            android:id="@+id/bar7"
            style="@style/bar" />

        <View
            android:id="@+id/bar8"
            style="@style/bar" />

        <View
            android:id="@+id/bar9"
            style="@style/bar" />

        <View
            android:id="@+id/bar10"
            style="@style/bar" />

        <View
            android:id="@+id/bar11"
            style="@style/bar" />

        <View
            android:id="@+id/bar12"
            style="@style/bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/months"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linlayout"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month1"
            style="@style/month" />

        <TextView
            android:id="@+id/month2"
            style="@style/month" />

        <TextView
            android:id="@+id/month3"
            style="@style/month" />

        <TextView
            android:id="@+id/month4"
            style="@style/month" />

        <TextView
            android:id="@+id/month5"
            style="@style/month" />

        <TextView
            android:id="@+id/month6"
            style="@style/month" />

        <TextView
            android:id="@+id/month7"
            style="@style/month" />

        <TextView
            android:id="@+id/month8"
            style="@style/month" />

        <TextView
            android:id="@+id/month9"
            style="@style/month" />

        <TextView
            android:id="@+id/month10"
            style="@style/month" />

        <TextView
            android:id="@+id/month11"
            style="@style/month" />

        <TextView
            android:id="@+id/month12"
            style="@style/month" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linlayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title1"
            style="@style/title" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/jerrycangray" />

        <TextView
            android:id="@+id/info1"
            style="@style/info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title2"
            style="@style/title" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/fuelinggray" />

        <TextView
            android:id="@+id/info2"
            style="@style/info" />
    </LinearLayout>
</RelativeLayout>
