<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.gasmanager.viacheslav.gasmanager.AboutActivity">

    <ImageView
        android:id="@+id/imgabout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/charging" />

    <TextView
        android:id="@+id/abouttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgabout"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/moon"
        android:text="@string/developer"
        android:textAlignment="center"
        android:textColor="#EDEDF5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/abouttext"
        android:fontFamily="@font/montextra"
        android:text="@string/abouttext"
        android:textAlignment="center"
        android:textColor="#E0E0E0" />

</RelativeLayout>
